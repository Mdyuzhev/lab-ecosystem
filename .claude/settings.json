{
  "model": "sonnet",
  "permissions": {
    "allow": [
      "Bash",
      "WebFetch(domain:localhost)",
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(sudo:*)"
    ]
  },
  "context": {
    "project": "Lab Ecosystem",
    "type": "react-site",
    "language": "javascript",
    "framework": "react",
    "styling": "tailwind",
    "bundler": "vite",
    "deploy": "github-pages"
  },
  "codeStyle": {
    "indentSize": 2,
    "useSemicolons": true,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
